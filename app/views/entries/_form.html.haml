- form.inputs do
  = form.input :language
  = form.input :standard_form, :label => 'Entry', :hint => "Enter in the language's standard form"
  = form.input :transliteration, :label => "Transliteration (no tones)"
  = form.input :transliteration_2, :label => "Transliteration (pinyin)"
  = form.input :transliteration_3, :label => "Transliteration (GR)"
  = form.input :image_data, :as => :hidden
- form.buttons do
  = form.commit_button
  %ul.actions
    %li= link_to 'Cancel', cancel_link


